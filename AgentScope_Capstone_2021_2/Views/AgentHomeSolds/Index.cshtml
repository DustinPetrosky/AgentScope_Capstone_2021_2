@model List<AgentScope_Capstone_2021_2.Models.AgentHomeSold>


@{
    ViewBag.Title = "Index";
}

@if (Model.Any()) {
    <!-- First Photo Grid-->
    <div class="w3-row-padding">
        @for (int i = 0; i < 3 && i < Model.Count(); i++) {
            var divClass = "w3-third w3-container";
            if (i != 2) {
                divClass += " w3-margin-bottom";
            }
            <div class="@divClass">
                <img src="~/UserContent/@Model[i].ImageFile" alt="Home Photo" style="width:100%; height: 12em" class="w3-hover-opacity">
                <div class="w3-container w3-white">
                    <p><b>@Model[i].Price.ToString("C0")</b></p>
                    <p>@Model[i].StreetNumber @Model[i].StreetName, @Model[i].City, @Model[i].StateProv @Model[i].ZipCode</p>
                </div>
            </div>
        }
    </div>

    <!-- Second Photo Grid-->
    <div class="w3-row-padding">
        @for (int i = 3; i < 6 && i < Model.Count(); i++) {
            var divClass = "w3-third w3-container";
            if (i != 5) {
                divClass += " w3-margin-bottom";
            }
            <div class="@divClass">
                <img src="~/UserContent/@Model[i].ImageFile" alt="Home Photo" style="width:100%; height: 12em" class="w3-hover-opacity">
                <div class="w3-container w3-white">
                    <p><b>@Model[i].Price.ToString("C0")</b></p>
                    <p>@Model[i].StreetNumber @Model[i].StreetName, @Model[i].City, @Model[i].StateProv @Model[i].ZipCode</p>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="w3-center w3-padding-32">
        <div class="w3-bar">

            @Html.ActionLink("«", "Profile", "Agent", new { home_page = 1, id = ViewBag.agentId }, new { @class = "w3-bar-item w3-button w3-hover-black" })

            @for (int i = 1; i <= ViewBag.numOfPages; i++) {
                string pageClass;
                if (i != ViewBag.pageNumber) {
                    pageClass = "w3-bar-item w3-button w3-hover-black";
                } else {
                    pageClass = "w3-bar-item w3-black w3-button";
                }

                @: @Html.ActionLink(i.ToString(), "Profile", "Agent", new { home_page = i, id = ViewBag.agentId }, new { @class = pageClass })
            }

            @Html.ActionLink("»", "Profile", "Agent", new { home_page = ViewBag.numOfPages, id = ViewBag.agentId }, new { @class = "w3-bar-item w3-button w3-hover-black" })

        </div>
    </div>
} else {
    <p class="noHomesText" style="text-align:center; margin-top: 1em"> This agent does not currently have any homes listed</p>
}