@model List<AgentScope_Capstone_2021_2.Models.AgentAccount>

@{
    ViewBag.Title = "Home Page";
    ViewBag.pageWrapperClass = "landingPage";
}
@section ticker{
    <div class="ticker-wrap">
        <div class="ticker">
            @if (Model.Count() > 0) {
                foreach (var item in Model) {
                    if (!string.IsNullOrWhiteSpace(item.ProfileImage)) {
                        <div class="ticker__item">
                            <a href="@Url.Action("Profile", "Agent", new { id = item.Id })"><img src="~/UserContent/@item.ProfileImage" alt="New Agents" style="border-radius: 50%"></a>
                        </div>
                    } else {
                        <div class="ticker__item">
                            <a href="@Url.Action("Profile", "Agent", new { id = item.Id })"><img src="~/images/profile photo.jpg" alt="New Agents" style="border-radius: 50%"></a>
                        </div>
                    }
                }
            } else {
                for (int i = 0; i < 7; i++) {
                    <div class="ticker__item">
                        <img src="https://images.vectorhq.com/images/previews/715/generic-profile-image-placeholder-suit-118559.png" alt="New Agents" style="border-radius: 50%">
                    </div>
                }
            }
        </div>
    </div>
}

<div class="jumbotron" style="background-image: linear-gradient(to bottom, rgba(245,245,245,0), rgba(68,68,68,0.9), rgba(68,68,68,0.8)); background-color: rgba(0,0,0,0)">
    <h1>
        @Html.Action("AccountCount", "Agent")
        &
        @Html.Action("ReviewCount", "AgentReviews")
    </h1>
</div>
