
<!DOCTYPE html>
<html>
<head>
    <title>Alpha by HTML5 UP</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/searchbarSS.css" rel="stylesheet" />
    <link href="~/Content/tickerSS.css" rel="stylesheet" />
    @RenderSection("extraCss", false)
</head>
<body class="landing is-preload">
    <div id="page-wrapper" class="@ViewBag.pageWrapperClass">

        <!-- Header -->
        <header id="header" class="alt">
            <!-- Navigation -->
            <nav class="navbar" id="nav">
                <ul>
                    <li class="nav-link">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="nav-link">
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li class="nav-link">
                        @{
                            if (User.IsInRole("Agent")) {
                                @Html.ActionLink("Profile", "Profile", "Agent")
                            }
                        }
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
        </header>

        <!-- Banner -->
        <section id="banner">
            <h2>AgentScope</h2>
            <p>Save yourself time & check out an agents real estate career!</p>
            @Html.Partial("_SearchPartial")
        </section>
        <!-- Main -->
        @RenderSection("ticker", false)
        <section id="main" class="container">
            @RenderBody()

        </section>



        <!-- Footer -->
        <footer id="footer">
            <ul class="icons">
                <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon brands fa-github"><span class="label">Github</span></a></li>
                <li><a href="#" class="icon brands fa-dribbble"><span class="label">Dribbble</span></a></li>
                <li><a href="#" class="icon brands fa-google-plus"><span class="label">Google+</span></a></li>
            </ul>
            <ul class="copyright">
                <li>&copy; Untitled. All rights reserved.</li>
                <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>
        </footer>

    </div>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/jquery.dropotron.min.js"></script>
    <script src="~/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/assets/js/browser.min.js"></script>
    <script src="~/assets/js/breakpoints.min.js"></script>
    <script src="~/assets/js/util.js"></script>
    <script src="~/assets/js/main.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
